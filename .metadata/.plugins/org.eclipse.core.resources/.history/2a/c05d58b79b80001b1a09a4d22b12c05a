
public class Student {
	private String name;
	private byte age;

	Student(String name){
		setName(name);
	}
	public String getName() {
		return name;
	}

	public void setName(String name) {
		if(name == null || name.trim().equals("")) {
			throw new IllegalArgumentException("name is mandatory");
		}
		this.name = name;
	}
}
